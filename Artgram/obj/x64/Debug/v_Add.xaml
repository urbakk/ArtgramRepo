<Page
    x:Class="Artgram.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Artgram"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFEBE1F0">
        <Button x:ConnectionId='1' x:Name="button" Content="" HorizontalAlignment="Left" Height="383" Margin="90,200,0,0" VerticalAlignment="Top" Width="537">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/Square44x44Logo.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="button_Add" Content="+ Dodaj" HorizontalAlignment="Left" Height="51" Margin="270,598,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Foreground="White" Background="#FF330033"                         />
        <ComboBox x:ConnectionId='3' x:Name="comboBox" HorizontalAlignment="Left" Height="Auto" Margin="723,226,0,0" VerticalAlignment="Top" Width="204" Header="Wybierz kategorię"/>
        <TextBox x:ConnectionId='4' x:Name="textBox" HorizontalAlignment="Left" Height="45" Margin="723,295,0,0" TextWrapping="Wrap" Text="Dodaj nazwę" VerticalAlignment="Top" Width="459" FontSize="18.667" Foreground="#FF706C6C"                            />
        <TextBox x:ConnectionId='5' x:Name="textBox_Copy" HorizontalAlignment="Left" Height="177" Margin="723,366,0,0" TextWrapping="Wrap" Text="Dodaj opis" VerticalAlignment="Top" Width="459" FontSize="18.667" Foreground="#FF706C6C"                                 />
        <Button x:ConnectionId='6' x:Name="button_Cancel" Content="Anuluj" HorizontalAlignment="Left" Height="51" Margin="777,598,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Background="#FF330033" Foreground="White"                            />
        <Button x:ConnectionId='7' x:Name="button_Accept" Content="Akceptuj" HorizontalAlignment="Left" Height="51" Margin="1001,598,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Background="#FF330033" Foreground="White"                            />
        <local:AppBar HorizontalAlignment="Left" VerticalAlignment="Top" Height="165" Width="1280"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock" HorizontalAlignment="Left" Margin="465,608,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="41" Width="283" FontSize="24"/>
    </Grid>


</Page>

