<UserControl
    x:Class="Artgram.AppBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Artgram"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="165" Foreground="{x:Null}"
    xmlns:fbsdk="using:winsdkfb">

    <Grid Margin="0,0,0,0" Background="#FFDAC8E2">
        <Button x:ConnectionId='1' x:Name="button_Logo" HorizontalAlignment="Left" Margin="110,30,0,0" VerticalAlignment="Top" Height="110" Width="170" FontSize="18"                           x:FieldModifier="public">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/artgram_logo.png"/>
            </Button.Background>
        </Button>
        <fbsdk:ProfilePictureControl x:ConnectionId='2' x:Name="ProfilePic" HorizontalAlignment="Left" Width="80" Height="80" Margin="1130,50,0,0" VerticalAlignment="Top"/>
        <Image x:ConnectionId='3' x:Name="ProfilePicNone" HorizontalAlignment="Left" Width="80" Height="80" Margin="1130,50,0,0" VerticalAlignment="Top" Source="Assets/User-head.png"/>
        <Border BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="1" Width="80" Height="80" Margin="1130,50,0,0" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='4' x:Name="UserName" HorizontalAlignment="Left" Width="150" Margin="982,110,0,0" Text="Nie zalogowano" VerticalAlignment="Top" FontSize="14" Foreground="Black"/>
        <Button x:ConnectionId='5' x:Name="button_Add" Content="Dodaj pracę" HorizontalAlignment="Left" Margin="850,60,0,0" VerticalAlignment="Top" Height="50" Width="120" FontSize="18"                          Background="#330033" Foreground="White"/>
        <Button x:ConnectionId='6' x:Name="Login" Content="Zaloguj z FB" HorizontalAlignment="Left" Margin="980,60,0,0" VerticalAlignment="Top" Height="50" Width="130" FontSize="18"                     Background="#330033" Foreground="White"/>
        <Button x:ConnectionId='7' x:Name="Logout" Content="Wyloguj z FB" HorizontalAlignment="Left" Margin="980,60,0,0" VerticalAlignment="Top" Height="50" Width="130" FontSize="18"                      Background="#330033" Foreground="White" Visibility="Collapsed"/>
        <TextBox x:ConnectionId='8' x:Name="textBox2" HorizontalAlignment="Left" Height="50" Margin="309,60,0,0" TextWrapping="Wrap" Text="Szukaj" VerticalAlignment="Top" Width="463" FontSize="18.667" Foreground="#FF706C6C"/>
        <Button x:ConnectionId='9' x:Name="button1" Content="" HorizontalAlignment="Left" Margin="772,60,0,0" VerticalAlignment="Top" Height="50" Width="56" Background="#330033"                      >
            <Button.Foreground>
                <ImageBrush ImageSource="ms-appx:///Assets/LockScreenLogo.png" Stretch="None"/>
            </Button.Foreground>
        </Button>
    </Grid>


</UserControl>

