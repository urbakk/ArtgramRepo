    <Grid Background="#FFEBE1F0">

        <local:AppBar HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="Auto"/>


        <Grid Margin="0,165,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" >

                <Button x:ConnectionId='8' x:Name="button" 
                        HorizontalAlignment="Center" Height="383"  VerticalAlignment="Center" Width="537">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Assets/Square44x44Logo.png"/>
                    </Button.Background>
                </Button>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,40">
                <Button x:ConnectionId='6' x:Name="button_Add"  Content="+ Dodaj" 
                        HorizontalAlignment="Center" Height="51" Width="Auto" FontSize="20" 
                        Foreground="White" Background="#FF330033"                         />
                <TextBlock x:ConnectionId='7' x:Name="textBlock" TextWrapping="Wrap" Text="TextBlock"  HorizontalAlignment="Right" Height="41" Width="200" FontSize="24"/>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">

                <ComboBox x:ConnectionId='3' x:Name="comboBox" Margin="0, 20" HorizontalAlignment="Left"  Height="Auto" Width="204" Header="Wybierz kategorię"/>
                <TextBox x:ConnectionId='4' x:Name="textBox"  Margin="0,100" 
                         VerticalAlignment="Top" HorizontalAlignment="Left" Height="Auto"  TextWrapping="Wrap" Text="Dodaj nazwę"  Width="440" 
                         FontSize="18.667" Foreground="#FF706C6C"                            />
                <TextBox x:ConnectionId='5' x:Name="textBox_Copy"  Margin="0,180,0,0" 
                         VerticalAlignment="Top" HorizontalAlignment="Left" Height="238"  TextWrapping="Wrap" Text="Dodaj opis"  Width="459" 
                         FontSize="18.667" Foreground="#FF706C6C"                                 />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" >
                <Button x:ConnectionId='1' x:Name="button_Cancel" Content="Anuluj"  Height="51"  
                        VerticalAlignment="Top" Width="111" 
                        FontSize="20" Background="#FF330033" Foreground="White"                            />
                <Button x:ConnectionId='2' x:Name="button_Accept" Content="Akceptuj"   Height="51"  
                        VerticalAlignment="Top" Margin="250,0,0,0" Width="201" MinWidth="150" 
                        FontSize="20" Background="#FF330033" Foreground="White"                            />
            </Grid>


        </Grid>

